package com.rohan.searchapi.service;

import java.util.List;
import java.util.stream.Collectors;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.rohan.searchapi.dao.employeeDao;
import com.rohan.searchapi.entity.Employee;

@Service
public class ServiceImple implements EmpService {
	
	@Autowired
	employeeDao dao;

	@Override
	public Employee save(Employee employee) {
		return dao.save(employee);
	}

//	 public List<Employee> searchEmployees(Double salary, String designation, Long id, String name) {
//	        return dao.findAll().stream()
//	                .filter(employee -> (salary == null || employee.getSalary() == salary))
//	                .filter(employee -> (designation == null || employee.getDesignation().equalsIgnoreCase(designation)))
//	                .filter(employee -> (id == null || employee.getId().equals(id)))
//	                .filter(employee -> (name == null || employee.getName().equalsIgnoreCase(name)))
//	                .collect(Collectors.toList());
//	    }
	 public List<Employee> searchEmployees(Double salary, String designation, Long id, String name) {
	        return dao.findAll().stream()
	                .filter(employee -> (employee.getDesignation().equalsIgnoreCase(designation) || employee.getSalary() == salary))
//	                .filter(employee -> (id == null || employee.getId().equals(id)))
//	                .filter(employee -> (name == null || employee.getName().equalsIgnoreCase(name)))
	                .collect(Collectors.toList());
	    }

}
